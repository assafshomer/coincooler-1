$('[id^="password_share_"]').bind('ajax:complete', function() {	
	if (document.cookie.match(/no_usb/)) {
		clearFlashes();
		$('.alert:contains("No USB storage detected")').show().delay(slow).fadeOut(fade);	
	} else if (document.cookie.match(/missing_files/)) {
		window.location.replace("/");
	}	else {
		var share_number=(this.id+"").substring('password_share_'.length);		
		animateFlash($('.alert:contains("password share"):contains('+share_number+')'));
	};
});